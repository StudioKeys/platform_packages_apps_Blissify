<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title=" ">

    <PreferenceCategory
        android:title="@string/blissify_dashboard_title"
        android:layout="@layout/blissify_preference_category">
    </PreferenceCategory>

    <!-- Animations -->
    <Preference
        android:key="animations_category"
        android:title="@string/blissify_animation_title"
        android:fragment="org.blissroms.blissify.fragments.animations.Animations"
        settings:layout="@layout/blissify_dashboard_preference_top"
        android:icon="@drawable/ic_blissify_animations" />

    <!-- Buttons -->
    <Preference
        android:key="button_settings"
        android:title="@string/button_pref_title"
        android:icon="@drawable/ic_blissify_buttons"
        settings:layout="@layout/blissify_dashboard_preference_middle"
        android:fragment="com.android.settings.bliss.buttons.ButtonSettings"/>

    <!-- Gestures -->
    <Preference
        android:key="gestures_category"
        android:title="@string/blissify_gestures_title"
        android:fragment="org.blissroms.blissify.fragments.gestures.Gestures"
        settings:layout="@layout/blissify_dashboard_preference_middle"
        android:icon="@drawable/ic_settings_gestures" />

    <!-- Lock Screen -->
    <Preference
        android:key="lockscreen_category"
        android:title="@string/blissify_lockscreen_title"
        android:fragment="org.blissroms.blissify.fragments.lockscreen.Lockscreen"
        settings:layout="@layout/blissify_dashboard_preference_middle"
        android:icon="@drawable/ic_blissify_lockscreen" />

    <!-- Notifications -->
    <Preference
        android:key="notifications_category"
        android:title="@string/blissify_notifications_title"
        android:fragment="org.blissroms.blissify.fragments.notification.Notification"
        settings:layout="@layout/blissify_dashboard_preference_middle"
        android:icon="@drawable/ic_blissify_notifications" />

    <!-- Power Menu
    <Preference
        android:key="powermenu_category"
        android:title="@string/blissify_powermenu_title"
        android:fragment="org.blissroms.blissify.fragments.powermenu.PowerMenu"
        android:icon="@drawable/ic_blissify_powermenu" /> -->

    <!-- Quick Settings panel -->
    <Preference
        android:key="quicksettings_category"
        android:title="@string/blissify_quicksettings_title"
        android:fragment="org.blissroms.blissify.fragments.qs.QuickSettings"
        settings:layout="@layout/blissify_dashboard_preference_middle"
        android:icon="@drawable/ic_blissify_quicksettings" />

    <!-- Status bar -->
    <Preference
        android:key="statusbar_category"
        android:title="@string/blissify_status_bar_title"
        android:fragment="org.blissroms.blissify.fragments.statusbar.Statusbar"
        settings:layout="@layout/blissify_dashboard_preference_middle"
        android:icon="@drawable/ic_blissify_statusbar" />

    <!-- Themes -->
    <Preference
        android:key="themes_category"
        android:title="@string/blissify_themes_title"
        android:fragment="org.blissroms.blissify.fragments.themes.ThemeSettings" 
        settings:layout="@layout/blissify_dashboard_preference_middle"
        android:icon="@drawable/ic_blissify_themes" />

    <!-- Misc -->
    <Preference
        android:key="misc_category"
        android:title="@string/blissify_misc_title"
        android:fragment="org.blissroms.blissify.fragments.misc.Misc"
        settings:layout="@layout/blissify_dashboard_preference_bottom"
        android:icon="@drawable/ic_blissify_miscellaneous" />

</PreferenceScreen>
