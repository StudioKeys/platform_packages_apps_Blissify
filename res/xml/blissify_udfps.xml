<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/udfps_category">

    <!-- Screen Off UDFPS -->
    <com.bliss.support.preferences.SecureSettingSwitchPreference
        android:key="screen_off_udfps_enabled"
        android:title="@string/screen_off_udfps_title"
        android:summary="@string/screen_off_udfps_summary"
        android:defaultValue="false" />

    <!-- UDFPS ICON PICKER -->
    <Preference
        android:key="udfps_icon_picker"
        android:title="@string/udfps_icon_picker_title"
        android:summary="@string/udfps_icon_picker_summary"
        android:fragment="org.blissroms.blissify.fragments.lockscreen.UdfpsIconPicker" />

        <Preference
            android:key="udfps_recognizing_animation_preview"
            android:title="@string/udfps_animation_title"
            android:summary="@string/udfps_animation_summary"
            android:fragment="org.blissroms.blissify.fragments.lockscreen.UdfpsAnimation"/>

</PreferenceScreen>
